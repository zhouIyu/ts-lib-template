{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
